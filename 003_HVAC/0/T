FoamFile
{
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 293;
    }

    outlet
    {
        type            zeroGradient;
    }

    "(top|walls)"
    {
        type            fixedValue;
        value           uniform 288;
    }

    bottom
    {
        type            fixedValue;
        value           uniform 308;
    }

    frontAndBack
    {
        type            empty;
    }
}


